{
  "compilerOptions": {
    "module": "commonjs",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2019",
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "rootDir": "./src",
    "esModuleInterop": true,
    "declaration": true
  },
  "exclude": ["node_modules", "dist"]
}